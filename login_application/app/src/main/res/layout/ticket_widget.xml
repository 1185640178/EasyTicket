<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    >

    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_margin="1dp"
        >
		   <!--门票图片-->

			<LinearLayout
				android:layout_height="@dimen/ticket_picture_size"
				android:layout_width="wrap_content"
                android:layout_weight="2"
				>
			<ImageView
				android:id="@+id/ticket_picture"
				android:layout_width="wrap_content"
				android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:layout_margin="@dimen/zoomSize"
				app:srcCompat="@drawable/s3" />

			</LinearLayout>


        <!--价格-地点-销量介绍等等-->
    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_marginLeft="@dimen/paddingtop"
        android:orientation="vertical"
        android:layout_gravity="center_vertical"
        android:layout_weight="1"
        >
		
        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            >
			
            <TextView
                android:id="@+id/ticket_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/ticket_name_size"
                android:textColor="@color/black"
               />

        </LinearLayout>

        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/paddingtop"
            >
            <TextView
                android:id="@+id/ticket_grade"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/blue"
                android:textStyle="bold"
                android:gravity="left"
                android:textSize="@dimen/grade_size"
                />

            <TextView
                android:id="@+id/ticket_sales_num"
                android:layout_width="match_parent"
                android:textColor="@color/black"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="@dimen/grade_size"
                 />

        </LinearLayout>

        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/paddingtop"
            >
            <TextView
                android:id="@+id/ticket_Label_one"
                android:layout_width="wrap_content"
                android:background="@drawable/textview_border"
                android:textColor="@color/blue"
                android:layout_height="wrap_content"
                android:textSize="@dimen/label_size"
                android:layout_margin="2dp"
           />
            <TextView
                android:id="@+id/ticket_Label_two"
                android:layout_width="wrap_content"
                android:background="@drawable/textview_border"
                android:textColor="@color/blue"
                android:layout_height="wrap_content"
                android:textSize="@dimen/label_size"
                android:layout_margin="2dp"
                />
            <TextView
                android:id="@+id/ticket_Label_three"
                android:layout_width="wrap_content"
                android:background="@drawable/textview_border"
                android:textColor="@color/blue"
                android:layout_height="wrap_content"
                android:textSize="@dimen/label_size"
                android:layout_margin="2dp"
                />
            <TextView
                android:id="@+id/ticket_Label_four"
                android:layout_width="wrap_content"
                android:background="@drawable/textview_border"
                android:textColor="@color/blue"
                android:layout_height="wrap_content"
                android:textSize="@dimen/label_size"
                android:layout_margin="2dp"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/paddingtop"
            >
            <TextView
                android:id="@+id/ticket_price"
                android:layout_width="wrap_content"
                android:textColor="@color/red"
                android:layout_height="wrap_content"
                android:textSize="@dimen/ticket_price_size"

                />

            <TextView
                android:id="@+id/ticket_locate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/gray"
                android:layout_marginLeft="18dp"
                android:textSize="@dimen/ticket_locate_size"
                 />
        </LinearLayout>

        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/paddingtop"
            >
            <TextView
                android:id="@+id/ticket_briefIntroduction"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/blue"
                android:textSize="@dimen/ticket_brief_size"
                />
        </LinearLayout>

    </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@drawable/line"
        />
    </LinearLayout>


