<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_margin="1dp"
        >


        <!--门票图片-->

        <LinearLayout
            android:layout_height="@dimen/ticket_picture_size"
            android:layout_width="wrap_content"
            android:layout_weight="2"
            >
            <ImageView
                android:id="@+id/ticket_picture"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:layout_margin="@dimen/zoomSize"
                />
        </LinearLayout>



        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_marginLeft="@dimen/paddingtop"
            android:orientation="vertical"

            android:layout_weight="1"
            >

            <LinearLayout
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                >

                <TextView
                    android:id="@+id/ticket_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/ticket_name_size"
                    android:textColor="@color/black"
                    />
                <TextView
                    android:id="@+id/ticket_num"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/gray"
                    android:gravity="center"
                    android:textSize="@dimen/ticket_price_size"
                    />

            </LinearLayout>



            <LinearLayout
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:layout_marginTop="@dimen/paddingtop"
                >
                <TextView
                    android:id="@+id/ticket_price"
                    android:layout_width="wrap_content"
                    android:textColor="@color/red"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/ticket_price_size"
                    />


            </LinearLayout>

            <LinearLayout
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/paddingtop_saleNum"
                >
                <LinearLayout
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:layout_marginLeft="@dimen/paddingleft"
                    >
                <TextView
                    android:id="@+id/ticket_detail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/yellow"
                    android:textSize="@dimen/ticket_name_size"
                    android:textColor="@color/black"
                    android:text="@string/ticket_detail"
                    />
                </LinearLayout>

                <LinearLayout
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:gravity="right"
                    >
                    <!--TextView
                        android:id="@+id/evaluate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@color/yellow"
                        android:layout_marginRight="@dimen/ticket_locate_size"
                        android:textColor="@color/black"
                        android:textSize="@dimen/ticket_name_size"
                        android:text="@string/evaluate"
                        /-->
                </LinearLayout>



            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@drawable/line"
        />

</LinearLayout>
